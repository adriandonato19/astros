---
import { localizePath } from "astro-i18next";
import { Icon } from "astro-icon/components";

export interface Props {
    posts: Array<any>;
}

const { posts } = Astro.props;

function formatDate(date: Date): string {
    const options: Intl.DateTimeFormatOptions = { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
    };
    return new Date(date).toLocaleDateString('es-ES', options);
}
---

<section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
    <h2 class="sr-only">Entradas del blog</h2>
    <div class="mx-auto grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:gap-12 lg:mx-0 lg:max-w-none lg:grid-cols-2">
        {posts.map((blogPostEntry) => (
            <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-stone-950 px-8 pb-8 pt-32 sm:pt-64 lg:pt-30 group">
                <img
                    src={blogPostEntry.data.image.src}
                    alt={blogPostEntry.data.image.alt}
                    class="absolute inset-0 -z-10 h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                />
                <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40" />
                <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10" />
                
                <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
                    <time datetime={blogPostEntry.data.publishDate.toISOString()} class="mr-8">
                        {formatDate(blogPostEntry.data.publishDate)}
                    </time>
                    <div class="-ml-4 flex items-center gap-x-4">
                        <svg viewBox="0 0 2 2" class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50">
                            <circle cx="1" cy="1" r="1" />
                        </svg>
                        <div class="flex gap-x-2.5 items-center">
                            <Icon name="carbon:user-avatar-filled-alt" class="w-5 h-5" />
                            <span>{blogPostEntry.data.author}</span>
                        </div>
                    </div>
                </div>
                
                <h3 class="mt-3 text-lg font-semibold leading-6 text-white group-hover:underline">
                    <a href={localizePath(`blog/${blogPostEntry.slug.split("/").slice(1).join("/")}`)} class="focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 rounded-md">
                        <span class="absolute inset-0" aria-hidden="true" />
                        {blogPostEntry.data.title}
                    </a>
                </h3>
                
                <p class="mt-2 text-sm text-gray-300 line-clamp-2">{blogPostEntry.data.description}</p>
                
                <div class="mt-4 flex items-center gap-x-4 text-xs">
                    <a 
                        href={localizePath(`/category/${blogPostEntry.data.category?.toLowerCase()}`)}
                        class="relative z-10 rounded-full bg-gray-400 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-300"
                    >
                        {blogPostEntry.data.category}
                    </a>
                </div>
            </article>
        ))}
    </div>
</section>