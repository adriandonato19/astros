---
import Link from "@components/ui/link.astro";
import { localizePath } from "astro-i18next";
// @ts-ignore
import { Icon } from "astro-icon/components";
import { t } from "i18next";

const features = [
	{
		"title": "Nuestra razón de ser",
		"description": "features.astro",
		"icon": "bx:bxs-briefcase",
		"url": "#",
		"image": "/images/"
	},
	{
		"title": "Para nuestros clientes",
		"description": "features.alpine",
		"icon": "bx:bxs-window-alt",
		"url": "#",
		"image": "/images/alpinjs.png"
	},
	{
		"title": "Enfoque colaborativo",
		"description": "features.tailwind",
		"icon": "bx:bxs-data",
		"url": "#",
		"image": "/images/alpinjs.png"
	},
	{
		"title": "Enfoque orientado a resultados tangibles",
		"description": "features.localization",
		"icon": "bx:bxs-bot",
		"url": "#",
		"image": "/images/alpinjs.png"
	},
	{
		"title": "Transparencia y confianza",
		"description": "features.light_dark_mode",
		"icon": "bx:bxs-file-find",
		"url": "#",
		"image": "/images/alpinjs.png"
	},
	{
		"title": "Comprensión de necesidades específicas",
		"description": "features.giscus",
		"icon": "bx:bxs-user",
		"url": "#",
		"image": "/images/alpinjs.png"
	},
	{
		"title": "Ser un aliado estratégico",
		"description": "features.decapcms",
		"icon": "bx:bxs-user",
		"url": "#",
		"image": "/images/alpinjs.png"
	},
	{
		"title": "Explore nuestras soluciones",
		"description": "features.rss",
		"icon": "bx:bxs-user",
		"url": "/rss.xml",
		"image": "/images/alpinjs.png"
	},
	{
		"title": "Compromiso con resultados sobresalientes",
		"description": "features.articlegenerator",
		"icon": "bx:bxs-user",
		"url": "#",
		"image": "/images/alpinjs.png"
	},
];

---

<div class="relative mx-auto max-w-5xl px-6 lg:px-8">
	<div class="text-white">a </div>
	<div class="bg-slate-100 shadow-2xl rounded mx-auto max-w-2xl lg:text-center hover:shadow-[#163ea3]">
		<h2 class="text-base font-semibold leading-7 text-[#163ea3] dark:text-white">{t("features.title")}</h2>
		<p class="mt-2 text-3xl font-bold tracking-tight text-[#163ea3] dark:text-white sm:text-4xl">{t("features.subtitle")}</p>
		<p class=" mx-5 text-justify mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
			{t("features.description")}
			
		</p>
	</div>
	<div class="rounded mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
		<dl class="rounded grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
			{
				features.map((item) => (
					<div class=" bg-slate-100 shadow-2xl rounded flex flex-col hover:shadow-[#163ea3]">
						<dt class=" flex items-center gap-x-3 text-base font-semibold leading-7 text-[#163ea3]  dark:text-white">
							<div class=" h-5 w-5 flex-none text-[#163ea3]  dark:text-white">
								<Icon name={item.icon} />
							</div>
							{item.title}
						</dt>
						<dd class="mx-5 mt-4 flex flex-auto flex-col text-base leading-7 text-gray-900 dark:text-gray-100">
							<p class="flex-auto text-justify">{t(item.description)}</p>
							<p class="mt-6">

							</p>
						</dd>
						<img class="max-w-full rounded" src={item.image} alt={item.title}>
					</div>
				))
			}
		</dl>
	</div>
</div>
