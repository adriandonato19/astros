const features = [
  {
    "title": "Nuestra razón de ser",
    "description": "Nuestra razón de ser es actuar como un puente sólido que conecta a los proveedores de servicios corporativos con los clientes, ofreciendo soluciones integrales de consultoría adaptadas a las necesidades particulares de cada uno.",
    "icon": "bx:bxs-briefcase",
    "url": "#",
    "bgImage": "public/images/people-1979261_640.jpg"
  },
  {
    "title": "Para nuestros clientes",
    "description": "Para nuestros clientes, nos encargamos de presentarles al socio idóneo según sus requerimientos específicos. Contamos con una extensa red y vasta experiencia para vincular a empresas e individuos con las soluciones perfectas para ellos.",
    "icon": "bx:bxs-window-alt",
    "url": "#",
    "bgImage": "public/images/clientes_satisfechos.jpg"
  },
  {
    "title": "Enfoque colaborativo",
    "description": "En WAICA adoptamos un enfoque colaborativo para la consultoría. Trabajamos en estrecha sinergia con diversas instituciones en Asia, Europa y América, con el objetivo de brindar los servicios corporativos, legales y financieros más destacados.",
    "icon": "bx:bxs-data",
    "url": "#",
    "bgImage": "public/images/enfoquecolaborativo.jpg"
  },
  {
    "title": "Enfoque orientado a resultados tangibles",
    "description": "Nuestro enfoque está orientado a resultados tangibles, y está diseñado para impulsar el éxito empresarial y encontrar la solución ideal para las necesidades de cada cliente.",
    "icon": "bx:bxs-bot",
    "url": "#",
    "bgImage": "public/images/dineroempresas.jpg"
  },
  {
    "title": "Transparencia y confianza",
    "description": "Creemos firmemente en la transparencia y en forjar relaciones de confianza con nuestros clientes.",
    "icon": "bx:bxs-file-find",
    "url": "#",
    "bgImage": "public/images/transparenciayconfianza.jpg"
  },
  {
    "title": "Comprensión de necesidades específicas",
    "description": "Nos esforzamos por comprender a profundidad sus objetivos y necesidades específicas, para luego brindarles soluciones personalizadas y eficientes.",
    "icon": "bx:bxs-user",
    "url": "#",
    "bgImage": "public/images/necesidadesespecificas.jpg"
  },
  {
    "title": "Ser un aliado estratégico",
    "description": "Nuestra meta es ser un aliado estratégico en su camino hacia el éxito empresarial.",
    "icon": "bx:bxs-user",
    "url": "#",
    "bgImage": "public/images/aliadoestrategico.jpg"
  },
  {
    "title": "Explore nuestras soluciones",
    "description": "Explore nuestras soluciones para obtener más información sobre nuestra propuesta de valor.",
    "icon": "bx:bxs-user",
    "url": "/rss.xml",
    "bgImage": "public/images/soluciones.jpg"
  },
  {
    "title": "Compromiso con resultados sobresalientes",
    "description": "Nuestro equipo se compromete a entregar resultados sobresalientes que superan las expectativas, gracias a un enfoque colaborativo y transparente.",
    "icon": "bx:bxs-user",
    "url": "#",
    "bgImage": "public/images/indicadores-de-desempeno.jpg"
  }
];

---

<div class="bg-gradient-to-r from-[#1e293b] to-[rgb(15,23,42)] relative mx-auto max-w px-6 lg:px-8">
  <div>a  </div>
  <div class="bg-black bg-opacity-50 rounded shadow mx-auto max-w-2xl lg:text-center">
    <h2 class="text-center  font-semibold leading-7 text-yellow-400 dark:text-white">{t("Nuestras Soluciones")}</h2>
    <p class=" text-center mx-4 mt-2 text-3xl font-bold tracking-tight text-white dark:text-white sm:text-4xl">{t("Todo lo que necesita")}</p>
    <p class="mx-7 text-justify mt-6 text-lg leading-8 text-white dark:text-gray-100">
      {t("En WORLDWIDE ADVISORS OF INVESTMENTS AND CAPITAL, LLC (WAICA), actuamos como un puente sólido que conecta a los proveedores de servicios corporativos con los clientes, ofreciendo soluciones integrales de consultoría adaptadas a sus necesidades particulares.")}
    </p>
  </div>
  <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
    <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
      {
        features.map((item) => (
          <div class="text-center flex flex-col bg-transparent rounded-lg shadow shadow-black --tw-shadow-color: #000;" style={`background-image: url(${item.bgImage}); background-size: cover; background-position: center;`}>
            <div class="bg-black bg-opacity-50 p-6 rounded-lg h-full flex flex-col">
              <dt class="mx-5 flex items-center gap-x-3 text-base font-semibold leading-7 text-white dark:text-white">
                <div class="h-5 w-5 flex-none text-white dark:text-white">
                  <Icon name={item.icon} />
                </div>
                {item.title}
              </dt>
              <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-white dark:text-gray-100">
                <p class="mx-5 flex-auto text-justify">{t(item.description)}</p>
                <p class="mt-6">

                  </Link>
                </p>
              </dd>
            </div>
          </div>
        ))
      }
    </dl>
  </div>
</div>