---
import Link from "@components/ui/link.astro";
import { localizePath } from "astro-i18next";
// @ts-ignore
import { Icon } from "astro-icon/components";
import { t } from "i18next";

const features = [
	{
		"title": "Nuestra razón de ser",
		"description": "features.astro",
		"icon": "bx:bxs-briefcase",
		"url": "#"
	},
	{
		"title": "Para nuestros clientes",
		"description": "features.alpine",
		"icon": "bx:bxs-window-alt",
		"url": "#"
	},
	{
		"title": "Enfoque colaborativo",
		"description": "features.tailwind",
		"icon": "bx:bxs-data",
		"url": "#"
	},
	{
		"title": "Enfoque orientado a resultados tangibles",
		"description": "features.localization",
		"icon": "bx:bxs-bot",
		"url": "#"
	},
	{
		"title": "Transparencia y confianza",
		"description": "features.light_dark_mode",
		"icon": "bx:bxs-file-find",
		"url": "#"
	},
	{
		"title": "Comprensión de necesidades específicas",
		"description": "features.giscus",
		"icon": "bx:bxs-user",
		"url": "#"
	},
	{
		"title": "Ser un aliado estratégico",
		"description": "features.decapcms",
		"icon": "bx:bxs-user",
		"url": "#"
	},
	{
		"title": "Explore nuestras soluciones",
		"description": "features.rss",
		"icon": "bx:bxs-user",
		"url": "/rss.xml"
	},
	{
		"title": "Compromiso con resultados sobresalientes",
		"description": "features.articlegenerator",
		"icon": "bx:bxs-user",
		"url": "#"
	},
];

---

<div class="relative mx-auto max-w px-6 lg:px-8 bg-slate-100">
	<div class="rounded bg-white shadow mx-auto max-w-2xl lg:text-center">
		<h2 class="text-base font-semibold leading-7 text-yellow-400 dark:text-white">{t("features.title")}</h2>
		<p class="mt-2 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{t("features.subtitle")}</p>
		<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
			{t("features.description")}
		</p>
	</div>
	<div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none ">
		<dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3 ">
			{
				features.map((item) => (
					<div class="text-center flex flex-col bg-white rounded-lg shadow">
						<dt class="mx-5 flex items-center gap-x-3 text-base font-semibold leading-7 text-black dark:text-white">
							<div class=" h-5 w-5 flex-none text-black dark:text-white">
								<Icon name={item.icon} />
							</div>
							{item.title}
						</dt>
						<dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-900 dark:text-gray-100">
							<p class="mx-5 flex-auto text-justify">{t(item.description)}</p>
							<p class="mt-6">
								<Link href={item.url} style="muted" size="xs" class="leading-6 text-left text-black dark:text-white">
									{t("features.learn_more")}{" "}
									<span class="pl-1 text-black dark:text-white" aria-hidden="true">
										→
									</span>
								</Link>
							</p>
						</dd>
					</div>
				))
			}
		</dl>
	</div>
</div>
