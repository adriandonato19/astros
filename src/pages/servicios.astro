---

<Layout title="Nuestros servicios | WAICA">
  <div class="bg-white text-white py-16">
    <Container>
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-5xl font-extrabold text-[#00165d] mb-12 text-center">Nuestros servicios</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {services.map((service, index) => (
            <div class="bg-white bg-opacity-10 backdrop-filter backdrop-blur-lg rounded-xl shadow-xl overflow-hidden transition-all duration-300 hover:shadow-2xl hover:scale-105" id={`service-${index}`}>
              <div class="relative h-48">
                <img 
                  src={service.image || `/api/placeholder/400/300?text=${encodeURIComponent(service.title)}`} 
                  alt={service.title} 
                  class="w-full h-full object-cover" 
                />
                <div class="absolute inset-0 bg-gradient-to-t from-blue-900 to-transparent opacity-70"></div>
                <div class="absolute bottom-4 left-4 right-4">
                  <h2 class="text-xl font-semibold mb-2 flex items-center text-white">
                    <i class={`${service.icon} mr-2 text-yellow-400`}></i>
                    {service.title}
                  </h2>
                </div>
              </div>
              <div class="p-6">
                <p class="text-black text-sm mb-4 content text-justify">{service.content}</p>
                <p class="text-black text-sm mb-4 content text-justify">{service.content2}</p>
                <button class="bg-yellow-400 text-white px-4 py-2 rounded-full hover:bg-yellow-300 transition duration-300 font-semibold">
                  Leer más
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </Container>
  </div>
</Layout>

<style>
  .content {
    transition: max-height 0.3s ease-out;
    max-height: 4.5em;
    overflow: hidden;
  }
  .content.expanded {
    max-height: none;
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const services = document.querySelectorAll('[id^="service-"]');

    services.forEach((service) => {
      const button = service.querySelector('button');
      const content = service.querySelector('.content');
      const fullContent = content.textContent;

      // Initially truncate the content
      content.textContent = fullContent.substring(0, 100) + '...';

      button.addEventListener('click', () => {
        if (content.classList.contains('expanded')) {
          content.classList.remove('expanded');
          content.textContent = fullContent.substring(0, 100) + '...';
          button.textContent = 'Leer más';
        } else {
          content.classList.add('expanded');
          content.textContent = fullContent;
          button.textContent = 'Leer menos';
        }
      });
    });
  });
</script>


