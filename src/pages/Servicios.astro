---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

const services = [
  {
    title: "Asesoría Fiscal",
    description: "Optimizamos tu situación fiscal y te mantenemos al día con las regulaciones.",
    image: "/images/fiscal-advisory.jpg"
  },
  {
    title: "Contabilidad",
    description: "Llevamos tus libros contables con precisión y eficiencia.",
    image: "/images/accounting.jpg"
  },
  {
    title: "Auditoría",
    description: "Realizamos auditorías exhaustivas para garantizar la salud financiera de tu empresa.",
    image: "/images/auditing.jpg"
  },
  {
    title: "Consultoría Empresarial",
    description: "Te ayudamos a tomar decisiones estratégicas para el crecimiento de tu negocio.",
    image: "/images/business-consulting.jpg"
  },
  {
    title: "Declaraciones de Impuestos",
    description: "Preparamos y presentamos tus declaraciones de impuestos de manera precisa y oportuna.",
    image: "/images/tax-declarations.jpg"
  },
  {
    title: "Nóminas",
    description: "Gestionamos el proceso de nóminas de tu empresa, asegurando cumplimiento y eficiencia.",
    image: "/images/payroll.jpg"
  },
  {
    title: "Planeación Fiscal",
    description: "Desarrollamos estrategias para optimizar tu carga fiscal de manera legal y eficiente.",
    image: "/images/tax-planning.jpg"
  },
  {
    title: "Constitución de Sociedades",
    description: "Te asesoramos en el proceso de creación y registro de tu empresa.",
    image: "/images/company-formation.jpg"
  },
  {
    title: "Reestructuras Corporativas",
    description: "Diseñamos e implementamos reestructuras para mejorar la eficiencia de tu organización.",
    image: "/images/corporate-restructuring.jpg"
  }
];
---

<Layout title="Servicios">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Nuestros Servicios</Fragment>
      <Fragment slot="desc">
        Soluciones integrales para el éxito de tu empresa
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-6xl mt-12">
      {services.map((service) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:scale-105">
          <img 
            src={service.image}
            alt={service.title}
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">{service.title}</h3>
            <p class="text-gray-600 text-sm">{service.description}</p>
          </div>
        </div>
      ))}
    </div>
  </Container>
</Layout>